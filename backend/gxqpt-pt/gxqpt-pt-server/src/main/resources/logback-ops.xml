            <maxHistory>60</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${common-pattern}</pattern>
        </encoder>
    </appender>


    <root level="${log.level.console}" >
        <appender-ref ref="CONSOLE_APPENDER"/>
        <appender-ref ref="ROOT_APPENDER_OPS"/>
    </root>
    <logger name="com.hengyunsoft.platform.ops.repository" additivity="true" level="${log.level.service}">
        <appender-ref ref = "SERVICE_APPENDER_OPS"/>
    </logger>
    <logger name="com.hengyunsoft.platform.ops.impl" additivity="true" level="${log.level.impl}">
        <appender-ref ref = "IMPL_APPENDER_OPS"/>
    </logger>

</included>