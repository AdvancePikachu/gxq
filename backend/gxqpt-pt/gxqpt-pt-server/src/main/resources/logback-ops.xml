<?xml version="1.0" encoding="UTF-8"?>
<included>



    <appender name="ROOT_APPENDER_OPS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/root_ops.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 每天一归档 -->
            <fileNamePattern>${log.path}/%d{yyyy-MM}/root_ops-%d{yyyy-MM-dd}-%i.log.gz</fileNamePattern>
            <!-- 单个日志文件最多 100MB, 60天的日志周期，最大不能超过20GB -->
            <maxFileSize>32MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${common-pattern}</pattern>
        </encoder>
    </appender>

    <appender name="SERVICE_APPENDER_OPS" class="ch.qos.logback.core.rolling.RollingFileAppender">
