        </encoder>
    </appender>





    <root level="${log.level.console}" >
        <appender-ref ref="CONSOLE_APPENDER"/>
        <appender-ref ref="ROOT_APPENDER_HARDWARE"/>
    </root>
    <logger name="com.hengyunsoft.platform.hardware.repository" additivity="true" level="${log.level.service}">
        <appender-ref ref = "SERVICE_APPENDER_HARDWARE"/>
    </logger>
    <logger name="com.hengyunsoft.platform.hardware.impl" additivity="true" level="${log.level.impl}">
        <appender-ref ref = "IMPL_APPENDER_HARDWARE"/>
    </logger>


</included>