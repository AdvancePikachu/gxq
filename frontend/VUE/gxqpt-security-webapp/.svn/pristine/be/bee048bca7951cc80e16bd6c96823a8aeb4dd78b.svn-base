<!-- 仪表盘 -->
<template>
  <div>
    <slot></slot>
  </div>
</template>

<script>
export default {
  props: {
    gaugeOption: {
      type: Object,
      default: () => {
        return {}
      }
    },
    id: {
      type: String,
      required: true
    },
    title: {
      type: String,
      default: ''
    }
  },
  mounted () {
    this.initEchart()
  },
  methods: {
    initEchart () {
      const vm = this
      const option = {
        tooltip : {
          formatter: ""
        },
        title:{
          text: vm.title,
          bottom: '0',
          left: 'center'
        },
        series: [],
        ...vm.gaugeOption
      }
      const gauge = vm.$echarts.init(document.getElementById(vm.id))
      gauge.setOption(option)
    }
  }
}
</script>
