<!-- 单位预警状态柱状图对比分析 -->
<template>
  <div id="appWarnHistory"></div>
</template>

<script>
function handleData(data) {
  // 已处理数量
  const handled = []
  // 年份、月份
  const month = []
  // 新增数量
  const newCome = []
  // 待处理数量
  const pending = []
  data.map(data => {
    handled.unshift(data.handled)
    month.unshift(data.month)
    newCome.unshift(data.newCome)
    pending.unshift(data.pending)
  })
  return { handled, month, newCome, pending }
}

export default {
  data () {
    return {
      echartData: {},
      appWarnHistory: ''
    }
  },
  methods: {
    initAppWarnHistory () {
      const echartData = this.echartData
      // 基于准备好的dom，初始化echarts实例
      if (!this.appWarnHistory) {
        this.appWarnHistory = this.$echarts.init(document.getElementById('appWarnHistory'))
      }
      const barWidth = 5
      const option = {
        backgroundColor: '#00265f',
        tooltip: {
          trigger: 'axis',
          axisPointer: {
            type: 'shadow'
          }
        },
        legend: {
          data: ['已处理', '未处理', '新增预警数量'],
          align: 'right',
          right: 10,
          textStyle: {
            color: "#fff"
          },
          itemWidth: 10,
          itemHeight: 10,
          itemGap: 35
        },
        grid: {
          left: '3%',
          right: '4%',
          bottom: '3%',
          containLabel: true
        },
        xAxis: [{
          type: 'category',
          data: echartData.month,
          axisLine: {
            show: true,
            lineStyle: {
              color: "#063374",
              width: 1,
              type: "solid"
            }
          },
          axisTick: {
            show: false,
          },
          axisLabel: {
            show: true,
            textStyle: {
              color: "#00c7ff",
            },
            rotate: 30
          },
        }],
        yAxis: [{
          type: 'value',
          axisLabel: {
            formatter: '{value}'
          },
          axisTick: {
            show: false,
          },
          axisLine: {
            show: false,
            lineStyle: {
              color: "#00c7ff",
              width: 1,
              type: "solid"
            },
          },
          splitLine: {
            lineStyle: {
              color: "#063374",
            }
          }
        }],
        series: [{
          name: '已处理',
          type: 'bar',
          data: echartData.handled,
          barWidth: barWidth, //柱子宽度
          barGap: 1, //柱子之间间距
          itemStyle: {
            normal: {
              color: this.$echarts.graphic.LinearGradient(0, 0, 0, 1, [{
                offset: 0,
                color: '#008cff'
              }, {
                offset: 1,
                color: '#005193'
              }]),
              opacity: 1,
            }
          }
        }, {
          name: '未处理',
          type: 'bar',
          data: echartData.pending,
          barWidth: barWidth,
          barGap: 1,
          itemStyle: {
            normal: {
              color: this.$echarts.graphic.LinearGradient(0, 0, 0, 1, [{
                offset: 0,
                color: '#00da9c'
              }, {
                offset: 1,
                color: '#007a55'
              }]),
              opacity: 1,
            }
          }
        }, {
          name: '新增预警数量',
          type: 'bar',
          data: echartData.newCome,
          barWidth: barWidth,
          barGap: 1,
          itemStyle: {
            normal: {
              color: this.$echarts.graphic.LinearGradient(0, 0, 0, 1, [{
                offset: 0,
                color: '#c4e300'
              }, {
                offset: 1,
                color: '#728400'
              }]),
              opacity: 1,
            }
          }
        }]
      }
      // 使用刚指定的配置项和数据显示图表。
      this.appWarnHistory.setOption(option)
    },
    refresh (data) {
      this.echartData = handleData(data)
      this.initAppWarnHistory()
    }
  }
}
</script>

<style lang="less" scoped>
#appWarnHistory{
  width: 100%;
  height: 300px;
}
</style>
