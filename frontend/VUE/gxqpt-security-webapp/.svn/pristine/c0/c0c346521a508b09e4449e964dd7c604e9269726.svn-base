@charset 'utf-8';
html {
  font-size: 12px;
}
.left {
  float: left;
}
.right {
  float: right;
}
.text-left {
  text-align: left;
}
.text-center {
  text-align: center;
}
.text-right {
  text-align: right;
}
.hidden {
  display: none;
}
.clearfix {
  width: 100%;
  display: table;
}
html,
body,
#app,
.ivu-layout {
  min-height: 100%;
}
html .ivu-layout-header,
body .ivu-layout-header,
#app .ivu-layout-header,
.ivu-layout .ivu-layout-header {
  padding: 0 30px;
  background: #0099CC;
}
html .ivu-layout-header .layout-logo img,
body .ivu-layout-header .layout-logo img,
#app .ivu-layout-header .layout-logo img,
.ivu-layout .ivu-layout-header .layout-logo img {
  margin-top: 10px;
  width: 160px;
}
html .ivu-layout-header .right-icon-box,
body .ivu-layout-header .right-icon-box,
#app .ivu-layout-header .right-icon-box,
.ivu-layout .ivu-layout-header .right-icon-box {
  margin-top: 10px;
}
html .ivu-layout-header .right-icon-box .icon-box,
body .ivu-layout-header .right-icon-box .icon-box,
#app .ivu-layout-header .right-icon-box .icon-box,
.ivu-layout .ivu-layout-header .right-icon-box .icon-box {
  float: left;
  padding: 0 20px;
  color: #ffffff;
}
html .ivu-layout-header .right-icon-box .icon-box i,
body .ivu-layout-header .right-icon-box .icon-box i,
#app .ivu-layout-header .right-icon-box .icon-box i,
.ivu-layout .ivu-layout-header .right-icon-box .icon-box i {
  text-align: center;
  line-height: 30px;
  width: 32px;
  height: 32px;
  border-radius: 25px;
  font-size: 1.8rem;
  border: 2px solid #ffffff;
  display: block;
  overflow: hidden;
}
html .ivu-layout-header .right-icon-box .icon-box i.icon-ren,
body .ivu-layout-header .right-icon-box .icon-box i.icon-ren,
#app .ivu-layout-header .right-icon-box .icon-box i.icon-ren,
.ivu-layout .ivu-layout-header .right-icon-box .icon-box i.icon-ren {
  line-height: 35px;
}
html .ivu-layout-header .right-icon-box .icon-box i.icon-index,
body .ivu-layout-header .right-icon-box .icon-box i.icon-index,
#app .ivu-layout-header .right-icon-box .icon-box i.icon-index,
.ivu-layout .ivu-layout-header .right-icon-box .icon-box i.icon-index {
  line-height: 35px;
}
html .ivu-layout-header .right-icon-box .icon-box i.icon-xiaoxi,
body .ivu-layout-header .right-icon-box .icon-box i.icon-xiaoxi,
#app .ivu-layout-header .right-icon-box .icon-box i.icon-xiaoxi,
.ivu-layout .ivu-layout-header .right-icon-box .icon-box i.icon-xiaoxi {
  color: #0099CC;
  background: #ffffff;
}
html .ivu-layout-header .right-icon-box .icon-box i.icon-tuichu,
body .ivu-layout-header .right-icon-box .icon-box i.icon-tuichu,
#app .ivu-layout-header .right-icon-box .icon-box i.icon-tuichu,
.ivu-layout .ivu-layout-header .right-icon-box .icon-box i.icon-tuichu {
  color: #0099CC;
  font-size: 1.5rem;
  background: #ffffff;
}
html .ivu-layout-header .right-icon-box .icon-box .text,
body .ivu-layout-header .right-icon-box .icon-box .text,
#app .ivu-layout-header .right-icon-box .icon-box .text,
.ivu-layout .ivu-layout-header .right-icon-box .icon-box .text {
  float: left;
  width: 100%;
  text-align: center;
  line-height: 25px;
}
html .ivu-layout-sider,
body .ivu-layout-sider,
#app .ivu-layout-sider,
.ivu-layout .ivu-layout-sider {
  background: #ffffff;
}
html .ivu-layout-sider a,
body .ivu-layout-sider a,
#app .ivu-layout-sider a,
.ivu-layout .ivu-layout-sider a {
  color: inherit;
}
html .ivu-layout-sider a.router-link-active,
body .ivu-layout-sider a.router-link-active,
#app .ivu-layout-sider a.router-link-active,
.ivu-layout .ivu-layout-sider a.router-link-active {
  color: #0099CC;
}
html .ivu-layout-sider a.router-link-active li,
body .ivu-layout-sider a.router-link-active li,
#app .ivu-layout-sider a.router-link-active li,
.ivu-layout .ivu-layout-sider a.router-link-active li {
  border-right: 3px solid #0099CC;
}
html .ivu-layout-sider .menu-icon,
body .ivu-layout-sider .menu-icon,
#app .ivu-layout-sider .menu-icon,
.ivu-layout .ivu-layout-sider .menu-icon {
  transition: all .3s;
}
html .ivu-layout-sider .rotate-icon,
body .ivu-layout-sider .rotate-icon,
#app .ivu-layout-sider .rotate-icon,
.ivu-layout .ivu-layout-sider .rotate-icon {
  transform: rotate(-180deg) !important;
}
html .ivu-layout-sider .menu-item span,
body .ivu-layout-sider .menu-item span,
#app .ivu-layout-sider .menu-item span,
.ivu-layout .ivu-layout-sider .menu-item span {
  display: inline-block;
  overflow: hidden;
  width: calc(100% - 50px);
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: bottom;
  transition: width .2s ease .2s;
}
html .ivu-layout-sider .menu-item i,
body .ivu-layout-sider .menu-item i,
#app .ivu-layout-sider .menu-item i,
.ivu-layout .ivu-layout-sider .menu-item i {
  transform: translateX(0px);
  transition: font-size 0.2s ease, transform 0.2s ease;
  vertical-align: middle;
  font-size: 16px;
}
html .ivu-layout-sider .collapsed-menu span,
body .ivu-layout-sider .collapsed-menu span,
#app .ivu-layout-sider .collapsed-menu span,
.ivu-layout .ivu-layout-sider .collapsed-menu span {
  width: 0px;
  transition: width .2s ease;
}
html .ivu-layout-sider .collapsed-menu i,
body .ivu-layout-sider .collapsed-menu i,
#app .ivu-layout-sider .collapsed-menu i,
.ivu-layout .ivu-layout-sider .collapsed-menu i {
  transform: translateX(5px);
  transition: font-size 0.2s ease 0.2s, transform 0.2s ease 0.2s;
  vertical-align: middle;
  font-size: 22px;
}
html .ivu-layout-content,
body .ivu-layout-content,
#app .ivu-layout-content,
.ivu-layout .ivu-layout-content {
  padding: 0 16px 16px;
}
html .ivu-layout-content .ivu-breadcrumb,
body .ivu-layout-content .ivu-breadcrumb,
#app .ivu-layout-content .ivu-breadcrumb,
.ivu-layout .ivu-layout-content .ivu-breadcrumb {
  margin: 16px 0;
  text-align: left;
}
html .ivu-layout-content .bottom-bar,
body .ivu-layout-content .bottom-bar,
#app .ivu-layout-content .bottom-bar,
.ivu-layout .ivu-layout-content .bottom-bar {
  text-align: right;
  margin-top: 30px;
  user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  -webkit-user-select: none;
}
/*对话框样式定义*/
.ivu-modal .ivu-modal-header {
  background: #5cadff;
}
.ivu-modal .ivu-modal-header .ivu-modal-header-inner {
  color: #ffffff;
}
.ivu-modal .ivu-modal-close i {
  color: #ffffff;
}
.vertical-center-modal {
  display: flex;
  align-items: center;
  justify-content: center;
}
.vertical-center-modal .ivu-modal {
  top: 0;
}
.ivu-form-item-content {
  min-height: 32px;
}
.ivu-form-item /deep/ .ivu-form-item-content {
  height: auto;
}

.ivu-input-wrapper /deep/ .ivu-input-disabled{
  color:#797979;
}
.ivu-select-single  /deep/ .ivu-select-selection .ivu-select-selected-value{
  color:#797979;
}
.ivu-input[disabled], fieldset[disabled] .ivu-input{
  color:#797979;
}
