<template>
  <Header class="header">
    <Menu mode="horizontal" theme="primary">
      <div class="layout-logo left" :class="logoClass"></div>
      <div class="layout-nav right right-icon-box">
        <div class="icon-box">
          <i class="iconfont icon-index"></i>
          <div class="text">
            首页
          </div>
        </div>
        <div class="icon-box">
          <i class="iconfont icon-ren"></i>
          <div class="text">
            {{userInfo.name}}
          </div>
        </div>
        <Poptip
          title="消息"
          trigger="hover"
          placement="bottom-end"
          style="float: left;">
          <div class="icon-box" @click="gotoMessageCenter">
            <i class="iconfont icon-xiaoxi"></i>
            <div class="text">消息</div>
            <div class="num" v-if="msgNum > 0">{{msgNum}}</div>
          </div>
          <div slot="content" class="message-container">
            <template v-if="messages.length > 0">
              <ul>
                <li v-for="(msg, idx) in messages" :key="idx" @click="jumpTo(msg.recId)">
                  <div :title="`[${msg.appName}]${msg.title}`" class="message-title">[{{msg.appName}}]{{msg.title}}</div>
                  <div class="message-time">
                    <span style="float: left;">{{msg.createTime}}</span>
                    <span style="float: right;">{{msg.appName}}</span>
                  </div>
                </li>
              </ul>
              <div class="all-message" @click="gotoMessageCenter">查看全部消息</div>
            </template>
            <template v-else>
              <div class="no-message">暂无消息</div>
            </template>
          </div>
        </Poptip>
        <div class="icon-box" @click="userLogout">
          <i class="iconfont icon-tuichu"></i>
          <div class="text">
            退出
          </div>
        </div>
      </div>
    </Menu>
  </Header>
</template>

<script>
import api from '@/api/axiosApi'
import apiList from '@/api/comApiList'
import { mapState } from 'vuex'
// const messages = [{
//   // 消息内容
//   title: 'jkkdsajfas',
//   // 消息时间
//   time: '2018-01-01',
//   // 消息系统
//   system: '运维系统',
//   // 消息id
//   id: '1234'
// }]
export default {
  props: ['logoClass'],
  data () {
    return {
      messages: [],
      msgNum:0
    }
  },
  mounted() {
    this.getMessage();
    // setInterval(this.getMessage,30*1000);
  },
  methods:{
    userLogout(){
      // location.href = this.logoutUrl;
    },
    // 跳转到对应的消息的系统
    jumpTo(id) {
      const vm = this
      api(apiList.toHandlerMsg, {
        recvMsgId: id
      }).then(res => {

        if(res.data.errcode == 0) {
          var handlerUrl = res.data.data
          window.open(handlerUrl)
        }
      }, (error) => {})
    },
    // 获取消息
    getMessage() {
      const vm = this
      api(apiList.getMessage, {
        data: {
         conditions: "all",
         userId: vm.userInfo.userId
        },
        pageNo: 1,
        pageSize: 10
      }).then(res => {
        if(res.data.errcode === 0) {
          const list = res.data.data.list
          vm.messages = list
          vm.msgNum = res.data.data.total
        }
      }, (error) => {})
    },
    // 跳转到消息中心
    gotoMessageCenter() {
      window.open('/gxqpt-center/admin/home?type=all')
    }
  },
  computed:{
    ...mapState([
      'userInfo'
    ])
  }
}
</script>
