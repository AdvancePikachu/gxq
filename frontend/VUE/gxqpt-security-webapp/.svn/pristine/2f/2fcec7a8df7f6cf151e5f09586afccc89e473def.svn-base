<!-- 柱状图 -->
<template>
  <div>
    <slot></slot>
  </div>
</template>

<script>
export default {
  props: {
    barOption: {
      type: Object,
      default: () => {
        return {}
      }
    },
    legendDataBar:{
      type: Array,
      default: []
    },
    id: {
      type: String,
      required: true
    },
    title: {
      type: String,
      default: ''
    }
  },
  mounted () {
    this.initEchart()
  },
  methods: {
    initEchart () {
      const vm = this
      const option = {
        title: {
          text: vm.title
        },
        tooltip: {
            trigger: 'axis',
            axisPointer: {
                type: 'shadow'
            }
        },
        legend: {
            data: this.legendDataBar,
            align: 'right',
            right: 10,
            textStyle: {
                color: "#333"
            },
            itemWidth: 10,
            itemHeight: 10,
            itemGap: 35
        },
        grid: {
            left: '3%',
            right: '4%',
            bottom: '3%',
            containLabel: true
        },
        xAxis: [],
        yAxis: [],
        series: [],
        ...vm.barOption
      }
      const line = vm.$echarts.init(document.getElementById(vm.id))
      line.setOption(option)
    }
  }
}
</script>
