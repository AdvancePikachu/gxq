<script>
// echart图外层容器，包括卡片样式
import chartCard from '@/view/home/chartCard.vue'
import lineChart from '@/view/home/lineChart.vue'
import barChart from '@/view/home/barChart.vue'
import api from '@/api/axiosApi'
import softhardApiList from '@/api/softhardApiList'
export default {
  components:{
    chartCard,
    lineChart,
    barChart
  },
  data() {
    return {
      machineCount: 0,
      serverCount: 0,
      cpuCount: 0,
      memorySize: 0,
      diskSize: 0,
    }
  },
  mounted () {
    this.init();
    this.drawNumStatics()
  },
  methods: {
    init(){//初始化
      this.getServersCountByMonth();
    },
    getServersCountByMonth() {//查询当前月及前十一个月的服务器数量
      let mon =[],arr=[];
      api(softhardApiList.getServersCountByMonth).then((res) => {
        if(res.status == 200) {
          res.data.data.forEach(item => {
            mon.push(item.mon);
            arr.push(parseInt(item.serverCount));
          });
          this.drawServiceAdd(mon,arr)
        }
      }, (err) => {})
    },
    // 绘制查询当前月及前十一个月的服务器数量分析图表
    drawServiceAdd (mon,arr) {
      const vm = this
      const opts = {
        el: 'serviceAdd',
        title: {
          text: '2018年服务器新增数'
        },
        xAxis: {
          name: '月份',
          data:  mon
        },
        yAxis: {
          name: '数目'
        },
        series: [{
          name: '服务器新增数',
          type:'line',
          data: arr
        }]
      }
      vm.$refs.serviceAdd.refresh(opts)
    },
    // 绘制故障处理分析图表
    drawServiceNum (name,arr) {
      const vm = this
      const opts = {
        el: 'serviceNum',
        legend: {
          left: 'center',
          bottom: 10,
          textStyle: {
            fontSize: '16px'
          },
          data: name
        },
        xAxis: {
          data: name,
          axisLabel: {
            interval:0,
            rotate:40
          }
        },
        yAxis: {
          name: '个数',
          min: 0,
          max: Math.max.apply(null, arr) + (Math.max.apply(null, arr)*0.2),
        },
        series: [{
          name: '服务器数量',
          data: arr,
          barWidth : (arr.length > 12) ? 20 : 40,
          itemStyle:{
              normal:{//柱子颜色
                  color:'#cc0000'
              }
          },
        }]
      }
      vm.$refs.serviceNum.refresh(opts)
    },
    drawNumStatics (date,cpuArr,memoryArr,diskArr) {
      const vm = this
      const opts = {
        el: 'numStatics',
        legend: {
          left: 'center',
          bottom: 10,
          textStyle: {
            fontSize: '16px'
          },
          data: ['CPU', '内存', '磁盘']
        },
        xAxis: {
          name: '月份',
          data: date
        },
        yAxis: {
          name: '个数'
        },
        series: [{
          name: 'CPU',
          data: cpuArr
        }, {
          name: '内存',
          data: memoryArr
        }, {
          name: '磁盘',
          data: diskArr
        }]
      }
      vm.$refs.numStatics.refresh(opts)
    }
  }
}
</script>

