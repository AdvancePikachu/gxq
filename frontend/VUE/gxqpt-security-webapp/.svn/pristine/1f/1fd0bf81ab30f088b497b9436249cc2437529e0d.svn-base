<!-- 单位预警状态柱状图对比分析 -->
<template>
  <div id="personnelWarnState"></div>
</template>

<script>
export default {
  data () {
    return {
      perWarnState: '',
      echartData: []
    }
  },
  methods: {
    initPerWarnState () {
      const echartData = this.echartData
      // 基于准备好的dom，初始化echarts实例
      if (!this.perWarnState) {
        this.perWarnState = this.$echarts.init(document.getElementById('personnelWarnState'))
      }
      const barWidth = 5
      const option = {
        backgroundColor: '#00265f',
        tooltip: {
          trigger: 'axis',
          axisPointer: {
            type: 'shadow'
          }
        },
        legend: {
          data: ['已处理', '未处理', '新增预警数量'],
          align: 'right',
          right: 10,
          textStyle: {
            color: "#fff"
          },
          itemWidth: 10,
          itemHeight: 10,
          itemGap: 35
        },
        grid: {
          left: '3%',
          right: '4%',
          bottom: '3%',
          containLabel: true
        },
        xAxis: [{
          type: 'category',
          data: echartData.names,
          axisLine: {
            show: true,
            lineStyle: {
              color: "#063374",
              width: 1,
              type: "solid"
            }
          },
          axisTick: {
            show: false,
          },
          axisLabel: {
            show: true,
            textStyle: {
              color: "#00c7ff",
            },
            rotate: 30
          },
        }],
        yAxis: [{
          type: 'value',
          axisLabel: {
            formatter: '{value}'
          },
          axisTick: {
            show: false,
          },
          axisLine: {
            show: false,
            lineStyle: {
              color: "#00c7ff",
              width: 1,
              type: "solid"
            },
          },
          splitLine: {
            lineStyle: {
              color: "#063374",
            }
          }
        }],
        series: [{
          name: '已处理',
          type: 'bar',
          data: echartData.processeds,
          barWidth: barWidth, //柱子宽度
          barGap: 1, //柱子之间间距
          itemStyle: {
            normal: {
              color: this.$echarts.graphic.LinearGradient(0, 0, 0, 1, [{
                offset: 0,
                color: '#008cff'
              }, {
                offset: 1,
                color: '#005193'
              }]),
              opacity: 1,
            }
          }
        }, {
          name: '未处理',
          type: 'bar',
          data: echartData.untreateds,
          barWidth: barWidth,
          barGap: 1,
          itemStyle: {
            normal: {
              color: this.$echarts.graphic.LinearGradient(0, 0, 0, 1, [{
                offset: 0,
                color: '#00da9c'
              }, {
                offset: 1,
                color: '#007a55'
              }]),
              opacity: 1,
            }
          }
        }, {
          name: '新增预警数量',
          type: 'bar',
          data: echartData.newThisYears,
          barWidth: barWidth,
          barGap: 1,
          itemStyle: {
            normal: {
              color: this.$echarts.graphic.LinearGradient(0, 0, 0, 1, [{
                offset: 0,
                color: '#c4e300'
              }, {
                offset: 1,
                color: '#728400'
              }]),
              opacity: 1,
            }
          }
        }]
      };
      // 使用刚指定的配置项和数据显示图表。
      this.perWarnState.setOption(option);
    },
    refresh (data) {
      this.echartData = data
      this.initPerWarnState()
    }
  }
}
</script>

<style lang="less" scoped>
#personnelWarnState{
  width: 100%;
  height: 300px;
}
</style>
